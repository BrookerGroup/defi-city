{
  "name": "defi-city-contracts",
  "version": "1.0.0",
  "type": "module",
  "description": "Smart contracts for DeFi City game",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "deploy:core:local": "hardhat ignition deploy ignition/modules/CoreContracts.ts --network localhost",
    "deploy:core:baseSepolia": "hardhat ignition deploy ignition/modules/CoreContracts.ts --network baseSepolia --parameters ignition/parameters/baseSepolia.json",
    "deploy:integration:local": "hardhat ignition deploy ignition/modules/IntegrationContracts.ts --network localhost",
    "deploy:integration:baseSepolia": "hardhat ignition deploy ignition/modules/IntegrationContracts.ts --network baseSepolia --parameters ignition/parameters/baseSepolia.json",
    "test:integration": "hardhat test test/integration/*.test.js --network baseSepolia",
    "test:integration:bank": "hardhat test test/integration/BankAdapter.integration.test.js --network baseSepolia",
    "test:integration:lottery": "hardhat test test/integration/LotteryAdapter.integration.test.js --network baseSepolia",
    "test:integration:shop": "hardhat test test/integration/ShopAdapter.integration.test.js --network baseSepolia",
    "test:integration:local": "hardhat test test/integration/*.test.js --network localhost",
    "test:integration:local:bank": "hardhat test test/integration/BankAdapter.integration.test.js --network localhost",
    "test:integration:local:lottery": "hardhat test test/integration/LotteryAdapter.integration.test.js --network localhost",
    "test:integration:local:shop": "hardhat test test/integration/ShopAdapter.integration.test.js --network localhost",
    "verify:baseSepolia": "hardhat run scripts/verify-contracts.ts --network baseSepolia",
    "verify:localhost": "hardhat run scripts/verify-contracts.ts --network localhost",
    "verify:wallets": "hardhat run scripts/auto-verify-wallets.ts --network baseSepolia",
    "node": "hardhat node",
    "clean": "hardhat clean"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.4.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox-mocha-ethers": "^3.0.2",
    "@nomicfoundation/hardhat-verify": "^3.0.8",
    "@types/node": "^25.0.10",
    "hardhat": "^3.1.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
